<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/ct_select_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/ct_radius_divider_white_bg"
        android:padding="5dp"
        android:text="年月日时间选择器" />



        <cat.customize.view.PopuSpringView
            android:id="@+id/ct_main_popu_spring"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:spring_text="一个popuwind改的spring"></cat.customize.view.PopuSpringView>

        <TextView
            android:id="@+id/ct_main_wave_popu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:padding="10dp"
            android:text="popuwindonw"
            android:visibility="visible" />

        <TextView
            android:id="@+id/ct_main_touchcallbackrecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:padding="10dp"
            android:text="一个长按起遮挡幕的TouchCallbackRecyclerView" />

        <TextView
            android:id="@+id/ct_main_xlistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:padding="10dp"
            android:text="一个可以下拉刷新,上拉加载，横滑Item的XListview" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_00FF05"
            android:orientation="vertical"
            android:padding="10dp">

            <cat.customize.ui.ISelectButton
                android:id="@+id/ct_main_select_btn_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:left_text="左侧按钮"
                app:right_text="右侧按钮"></cat.customize.ui.ISelectButton>

        </LinearLayout>


        <cat.customize.ui.RfidCleanButton
            android:id="@+id/ct_main_read_clean_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"></cat.customize.ui.RfidCleanButton>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/ct_hide_scan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="单模式" />

            <TextView
                android:id="@+id/ct_hide_read"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="双模式" />

            <TextView
                android:id="@+id/ct_hide_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="禁用一侧" />
        </LinearLayout>

        <cat.customize.ui.ScanResetReadButton
            android:id="@+id/ct_scan_reset_read_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ct_main_wave_rfid_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:padding="10dp"
            android:text="一个水波纹的圆"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ct_main_more_fg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"></LinearLayout>


        <cat.customize.ui.CtToolBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/power_tv_01"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="隐藏功率按钮"
            android:layout_margin="2dp"
            android:gravity="center"
            android:padding="2dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/power_tv_02"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:text="隐藏重置按钮"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/power_tv_03"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="切换背景色"
            android:gravity="center"
            android:padding="2dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:layout_height="wrap_content"/>
    </LinearLayout>

        <cat.customize.ui.ReadCleanPowerButton
            android:id="@+id/ct_main_read_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/color_ff0000"></cat.customize.ui.ReadCleanPowerButton>

        <TextView
            android:id="@+id/ct_to_last_frg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="下一页" />

</LinearLayout>

