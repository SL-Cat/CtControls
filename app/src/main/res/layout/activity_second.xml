<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">


    <cat.customize.iview.CtRadioEdit
        android:id="@+id/ct_radio_ed"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="80dp"/>

    <cat.customize.radio.IRadiosButton
        android:id="@+id/ct_second_radios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <cat.customize.radio.ISwitchbutton
        android:layout_width="60dp"
        android:layout_height="wrap_content" />

    <cat.customize.datepicker.DatePickerView
        android:id="@+id/ct_second_loop"
        android:layout_width="120dp"
        android:layout_height="160dp" />

    <TextView
        android:id="@+id/ct_second_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ct_radius_divider_white_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="日历选择器"
        android:textSize="16sp" />


    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

    </FrameLayout>

    <TextView
        android:id="@+id/ct_second_toast_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/ct_radius_divider_white_bg"
        android:padding="5dp"
        android:text="一个中间显示的提示框" />

    <ImageView
        android:id="@+id/ct_an_ig"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@mipmap/logn" />

    <TextView
        android:id="@+id/ct_second_load_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/ct_radius_divider_white_bg"
        android:padding="5dp"
        android:text="加载提示框" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ct_second_hint_dialog_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:padding="5dp"
            android:text="确认取消的提示框" />

        <TextView
            android:id="@+id/ct_second_hint_dialog_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:padding="5dp"
            android:text="确认的提示框" />
    </LinearLayout>

</LinearLayout>