<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">


    <cat.customize.ui.CtRadioEdit
        android:id="@+id/ct_radio_ed"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/ed_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/test_more_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="每行3个共7个" />

        <TextView
            android:id="@+id/test_more_btn_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="每行2个共3个" />
    </LinearLayout>


        <cat.customize.radio.IRadiosButton
            android:id="@+id/ct_second_radios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_background="@drawable/ct_radius_white_select_bg"
            app:max_num="3" />

        <cat.customize.radio.ISwitchbutton
            android:id="@+id/switch_btn"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:text="记住密码" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <cat.customize.datepicker.DatePickerView
                android:id="@+id/ct_second_loop"
                android:layout_width="120dp"
                android:layout_height="160dp" />

            <TextView
                android:id="@+id/set_alarm_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ct_radius_divider_white_bg"
                android:padding="5dp"
                android:text="设置一个1分钟后的闹钟" />
        </LinearLayout>


        <TextView
            android:id="@+id/ct_second_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="日历选择器"
            android:textSize="16sp" />


        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

        </FrameLayout>

        <TextView
            android:id="@+id/ct_second_toast_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:padding="5dp"
            android:text="一个中间显示的提示框" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ct_an_ig"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@mipmap/logn" />

            <TextView
                android:id="@+id/ct_an_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="灵创\nRFID"
                android:textSize="16sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/ct_second_load_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:padding="5dp"
            android:text="加载提示框" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ct_second_hint_dialog_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/ct_radius_divider_white_bg"
                android:padding="5dp"
                android:text="确认取消的提示框" />

            <TextView
                android:id="@+id/ct_second_hint_dialog_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/ct_radius_divider_white_bg"
                android:padding="5dp"
                android:text="确认的提示框" />
        </LinearLayout>

        <TextView
            android:id="@+id/next_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="下一页" />

</LinearLayout>