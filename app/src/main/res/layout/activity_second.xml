<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <cat.customize.radio.IRadiosButton
        android:id="@+id/ct_second_radios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <cat.customize.radio.ISwitchbutton
        android:layout_width="60dp"
        android:layout_height="wrap_content" />

    <cat.customize.radio.loop.ILoopView
        android:id="@+id/ct_second_loop"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/ct_second_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ct_radius_divider_white_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="日历选择器"
        android:textSize="16sp" />


    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

    </FrameLayout>

    <TextView
        android:id="@+id/ct_second_toast_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/ct_radius_divider_white_bg"
        android:padding="5dp"
        android:text="一个中间显示的提示框" />

    <ImageView
        android:id="@+id/ct_an_ig"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:src="@mipmap/logn" />

    <TextView
        android:id="@+id/ct_second_load_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/ct_radius_divider_white_bg"
        android:text="一个中间显示的提示框" />

</LinearLayout>