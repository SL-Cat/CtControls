<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <cat.customize.radio.IRadiosButton
        android:id="@+id/ct_second_radios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <cat.customize.radio.ISwitchbutton
        android:layout_width="60dp"
        android:layout_height="wrap_content"/>

    <cat.customize.radio.loop.ILoopView
        android:id="@+id/ct_second_loop"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/ct_second_time"
        android:text="时间选择器"
        android:textSize="16sp"
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/ct_radius_divider_white_bg"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>
</LinearLayout>