<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/fragment_bg"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/ct_second_load_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:padding="5dp"
            android:text="加载提示框" />

        <TextView
            android:id="@+id/ct_second_btn_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:padding="5dp"
            android:text="确认取消的提示框" />

        <TextView
            android:id="@+id/ct_confirm_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ct_radius_divider_white_bg"
            android:padding="5dp"
            android:text="确认的提示框" />

    </LinearLayout>

</ScrollView>