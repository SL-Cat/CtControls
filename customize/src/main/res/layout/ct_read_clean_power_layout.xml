<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ff0000"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/ct_read_power_btn"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="30"
                android:textColor="@color/color_ffffff"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="dBM"
                android:textColor="@color/color_ffffff"
                android:textSize="8sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:background="@color/color_014099"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ct_read_reset_btn"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="重置"
                android:textColor="@color/color_ffffff"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/color_014099"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ct_read_start_btn"
                android:gravity="center"
                android:text="开始读取(RFID)"
                android:textColor="@color/color_ffffff"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/ct_read_stop_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_506FAF"
        android:gravity="center"
        android:text="停止读取(RFID)"
        android:textColor="@color/color_ffffff"
        android:textSize="18sp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/ct_read_button_fra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_49AAB9">

        <RelativeLayout
            android:id="@+id/ct_read_reset_rl"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@drawable/ct_read_reset_btn"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ct_read_power_btn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="@drawable/ct_read_power_btn"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ct_read_power_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="30"
                    android:textColor="@color/color_ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="dBM"
                    android:textColor="@color/color_ffffff"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ct_read_reset_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/ct_read_power_btn"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ct_read_reset_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="重置"
                    android:textColor="@color/color_ffffff"
                    android:textSize="18sp" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/ct_read_start_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/ct_read_reset_rl"
            android:gravity="center"
            android:text="开始读取(RFID)"
            android:textColor="@color/color_ffffff"
            android:textSize="18sp" />


    </RelativeLayout>

</RelativeLayout>