<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ct_radius_white_select_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ct_tips_dialog_title"
        android:layout_width="match_parent"
        android:text=""
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@color/color_000000"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ct_tips_dialog_msg"
        android:layout_width="match_parent"
        android:text=""
        android:paddingLeft="10dp"
        android:textSize="16sp"
        android:textColor="@color/color_000000"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ct_tips_dialog_comfrim"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="@string/ct_confirm"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:textColor="@color/color_007BFF"
        android:layout_height="wrap_content" />
</LinearLayout>