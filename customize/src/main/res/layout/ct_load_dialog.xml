<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/ct_load_rl"
    android:background="@drawable/ct_radius_divider_white_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ct_load_dialog_ig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@mipmap/ct_lead_logo" />

    <TextView
        android:id="@+id/ct_load_dialog_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/ct_loading_text"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/ct_load_dialog_ig"
        android:textColor="@color/color_000000"
        android:textSize="20sp" />

</RelativeLayout>