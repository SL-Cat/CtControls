<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ct_radius_bg"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/ct_popu_spring_crd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:contentPadding="5dp"
        app:cardBackgroundColor="@color/color_ffffff"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ct_popu_spring_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是一个spring" />

            <ImageView
                android:id="@+id/ct_popu_spring_ig"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/load_more_ig" />
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>