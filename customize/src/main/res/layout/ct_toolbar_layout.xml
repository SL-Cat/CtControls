<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:id="@+id/ct_toolbar_rl"
    android:background="@color/color_6610F2"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ct_toolbar_left_ig"
        android:layout_width="wrap_content"
        android:src="@mipmap/ct_back_ig"
        android:padding="10dp"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/ct_toolbar_center_title"
        android:layout_width="wrap_content"
        android:text="标题栏"
        android:gravity="center"
        android:layout_toRightOf="@+id/ct_toolbar_left_ig"
        android:textSize="16sp"
        android:textColor="@color/color_ffffff"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/ct_toolbar_right_ig"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ct_more" />

</RelativeLayout>